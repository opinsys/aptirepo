from __future__ import print_function

import os
import subprocess
import sys

_IMPORT_CMD = {
    ".changes" : "importchanges",
    ".deb"     : "importdeb",
}

def main():
    print("This command is deprecated, please use aptirepo and its subcommands "
          "instead! E.g. aptirepo importchanges FILE.changes", file=sys.stderr)
    if len(sys.argv) != 2:
        print("error: wrong number of arguments", file=sys.stderr)
        print("Usage: aptirepo-import FILE", file=sys.stderr)
        sys.exit(1)

    filepath = sys.argv[1]
    _, ext = os.path.splitext(filepath)
    try:
        import_cmd = _IMPORT_CMD[ext]
    except KeyError:
        print("error: FILE must be %s" % " or ".join(_IMPORT_CMD.keys()),
              file=sys.stderr)
        sys.exit(1)

    p = subprocess.Popen(["aptirepo", import_cmd, filepath])

if __name__ == "__main__":
    main()
